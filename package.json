{
  "name": "open-delphi-development-system",
  "version": "1.0.0",
  "description": "Open Delphi development system",
  "main": "build/main.js",
  "scripts": {
    "build": "tsc && copyfiles -f ./index.html build",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "yarn run build && electron ./build/main.js",
    "pack": "yarn build && electron-builder --dir",
    "dist": "yarn build && electron-builder build"
  },
  "build": {
    "appId": "your.id",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "category": "guru.konsulent.open-delphi"
    }
  },
  "repository": "https://github.com/stenbror/open-delphi",
  "keywords": [
    "Delphi",
    "RAID",
    "IDE"
  ],
  "author": "Richard Magnor Stenbro",
  "license": "CC0-1.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "copyfiles": "^2.4.1",
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3",
    "eslint": "^7.32.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {}
}
